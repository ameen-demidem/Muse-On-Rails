<p id="notice"><%= notice %></p>

<h3 class="center h-3-spacing white-text">
  Check out your schedule!
</h3>
<%= link_to new_teacher_lesson_path,
            class: "btn-floating waves-effect waves-light green" do %>
   <i class="material-icons">date_range</i>
<% end %>
<span class="button-text white-text">add lessons!</span>
<div class="row">
  <div class="col s12 white-text">
    <div class="card-panel hoverable">
      <div class="" id="calendar"></div>
    </div>
  </div>
</div>
<script>

  $(document).on('turbolinks:load', function(){
    $('#calendar').fullCalendar({
      defaultView: $(window).width() > 400 ? 'agendaWeek' : 'agendaDay',
      height: 'auto',
      minTime: "12:00:00",
      allDaySlot: false,
      events: {
        url: '/teacher/lessons.json',
        textColor: 'white'
      },
      theme: true,
      timeFormat: 'h(:mm)'
    });

    var nextPrev = {
      "border": "none",
      "border-radius": "3px",
      "margin-right": "0.5em",
      "background-color": "#A9ABAE"
    }

    var today = {
      "border": "none",
      "border-radius": "3px",
      "margin-right": "0.5em",
      "background-color": "#4385D8"
    }

    $('.fc-button-group > .ui-corner-left').text('< prev').css(nextPrev)
    $('.fc-button-group > .ui-corner-right').html('next >').css(nextPrev)

    $('.fc-today-button').css(today)
  });

</script>
