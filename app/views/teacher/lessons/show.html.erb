<p id="notice"><%= notice %></p>

<h3 class="center h-3-spacing white-text">
  <span class="thin">Title:</span> <%= @lesson.title %>
</h3>
<%= link_to teacher_lessons_path,
            class: "btn-floating waves-effect waves-light green" do %>
   <i class="material-icons">date_range</i>
<% end %>
<span class="button-text white-text">back to calendar</span>
<div class="row button-spacing">
  <div class="col s12 brand-text-grey">
    <div class="card-panel hoverable grad">
      <div class="row">
      <%= link_to edit_teacher_lesson_path(@lesson) do %>
        <i class="material-icons right brand-text-grey">edit</i>
      <% end %>
      </div>
      <div class="row col s12 offset-1">
        <h5 class="brand-text-dark">Lesson details</h5>
        <div class="row">
          <p class="col m3 s12">
            Student:<br>
            <span class="white-text thin"><%= @student.name %></span>
          </p>

          <p class="col m3 s12">
            their parent:<br>
            <span class="white-text thin"><%= @student.parent.name %></span>
          </p>

          <p class="col m3 s12">
             Lesson Description:<br>
            <span class="white-text thin"><%= @lesson.description %></span>
          </p>
        </div>
        <h5 class="brand-text-dark">Lesson times</h5>
        <div class="row">
          <p class="col m3 s12">
            Lesson Date:<br>
            <span class="white-text thin"><%= @lesson.start_time.strftime("%A, %d %b %Y") %></span>
          </p>

          <p class="col m3 s12">
            Start time:<br>
            <span class="white-text thin"><%= @lesson.start_time.strftime("%l:%M %P") %></span>
          </p>

          <p class="col m3 s12">
            End time:<br>
            <span class="white-text thin"><%= @lesson.end_time.strftime("%l:%M %P") %></span>
          </p>
        </div>
      </div>
      <div class="row">
        <a class="btn-floating waves-effect waves-light red modal-trigger right" href="#modal1"><i class="material-icons">delete</i></a>
      </div>
    </div>
  </div>
</div>

<div id="modal1" class="modal bottom-sheet">
  <div class="modal-content center">
    <h5>Are you Sure you want to cancel this lesson?</h5>
    <%= link_to 'Yes! Cancel it', teacher_lesson_path(@lesson),
        method: :delete,
        class: "modal-action modal-close waves-effect waves-green btn-flat brand-text-grey" %>
  </div>
  <div class="modal-footer">
    <a href="#!" class=" modal-action modal-close waves-effect waves-green btn-flat"></a>
  </div>
</div>
<script>
$(document).ready(function(){
    // the "href" attribute of .modal-trigger must specify the modal ID that wants to be triggered
    $('.modal-trigger').leanModal();
  });
</script>
