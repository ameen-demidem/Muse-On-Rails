<h3 class="center h-3-spacing white-text">
  Congrats, more business!<br>
  <span class="title-comment thin">(and your parents said music was a dumb choice!)</span>
</h3>

<% if @parent.errors.any? %>
  <div class="row">
    <div class="col s12">
      <div class="card-panel hoverable thick">
        <div class="white-text">
          <h5>Some issues with your entry, please fix them:</h5>
          <ol>
            <% @parent.errors.full_messages.each do |error| %>
              <li class="errors-list"><%= error %></li>
            <% end %>
          </ol>
        </div>
      </div>
    </div>
  </div>
<% end %>

<div class="row">
  <div class="col s12 white-text card-bottom">
    <%= form_for @parent, url: teacher_students_path(@parent), class: "card-padding" do |f| %>
      <div class="card-panel hoverable">
        <h5 class="center">Add the parent</h5>
        <div>
          <%= f.label "Parent Name:" %>
          <%= f.text_field :name %>
        </div>
        <div>
          <%= f.label "Username:" %>
          <%= f.text_field :username %>
        </div>
        <div>
          <%= f.label "Password:" %>
          <%= f.password_field :password %>
        </div>
      </div>
      <%= f.fields_for :children do |child_form| %>
        <div class="card-panel hoverable">
          <h5 class="center">Add a child</h5>
          <div>
            <%= child_form.label "Child Name:" %>
            <%= child_form.text_field :name %>
          </div>
          <div>
            <%= child_form.label "Username:" %>
            <%= child_form.text_field :username %>
          </div>
          <div>
            <%= child_form.label "Password:" %>
            <%= child_form.password_field :password %>
          </div>
        </div>
      <% end %>
      <div class="center button-spacing">
        <%= button_tag class: "btn waves-effect waves-light green" do %>
          Submit
          <i class="material-icons right">send</i>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

