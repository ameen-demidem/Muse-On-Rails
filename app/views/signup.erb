<div class="row">
  <div class="col s12 white-text card-bottom">
    <div class="card-panel hoverable">
      <h5 class="center">Add a student</h5>
      <form class="card-padding" method="post" action="/signup">
        <div>
          <label>Full Name:</label>
          <input type="text" name="name" value="<%= @teacher.name %>">
        </div>
        <div>
          <label>Username:</label>
          <input type="text" name="username" value="<%= @teacher.username %>">
        </div>
        <div>
          <label>Password:</label>
          <input type="text" name="password" value="<%= @teacher.password %>">
        </div>
        <div class="center button-spacing">
          <button class="btn waves-effect waves-light green" type="submit" name="action" value="Create">
            Submit
            <i class="material-icons right">send</i>
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
