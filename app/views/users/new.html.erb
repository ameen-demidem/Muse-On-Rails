<h3 class="white-text h-3-spacing center">The Best Decison You'll Ever Make</h3>

<% if @teacher.errors.any? %>
  <div class="row">
    <div class="col s12">
      <div class="card-panel hoverable thick home-card">
        <div class="white-text">
          <h5>Some issues with your entry, please fix them:</h5>
          <ol>
            <% @teacher.errors.full_messages.each do |error| %>
              <li class="errors-list"><%= error %></li>
            <% end %>
          </ol>
        </div>
      </div>
    </div>
  </div>
<% end %>

<div class="row">
  <div class="col s12 white-text card-bottom">
    <div class="card-panel hoverable">
      <h5 class="center">Create an account</h5>
      <%= form_for @teacher, html: { class: "card-padding" } do |f| %>
        <div class="input-field col s12 m6">
          <%= f.text_field :name %>
          <%= f.label "Full Name:" %>
        </div>
        <div class="input-field col s12 m6">
          <%= f.text_field :username %>
          <%= f.label "Username:" %>
        </div>
        <div class="input-field col s12 m6">
          <%= f.text_field :email %>
          <%= f.label "Email:" %>
        </div>
        <div class="input-field col s12 m6">
          <%= f.password_field :password %>
          <%= f.label "Password:" %>
        </div>
        <div class="input-field col s12 m6">
          <%= f.number_field :rate %>
          <%= f.label "Rate ($) per Lesson:" %>
        </div>
        <div class="input-field col s12 m6">
          <%= f.label "Plan:", class: "active" %>
          <%= f.select :plan, options_for_select([["Basic (1-5 Students): $5/mo", "basic"], ["Standard (6-10 Students): $10/mo", "standard"], ["Premium (11+ Students): $15/mo", "premium"]], "basic") %>
        </div>
        <div class="center button-spacing">
          <%= button_tag "Submit", class: "btn waves-effect waves-light green button-spacing" do %>
            Submit
            <i class="material-icons right">send</i>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
